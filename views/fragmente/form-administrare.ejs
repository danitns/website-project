<form id="form_adm" method="post" action="/administrare" enctype="multipart/form-data">
    <div class="form-group">
        <label for="inp-poza">Poza:</label>
        <input class="form-control" type="file" name="poza" id="inp-poza">
    </div>
    <div class="form-group">
        <label for="sel-caroserie">Caroserie:</label>
        <select class="form-select" name="caroserie" id="sel-caroserie">
            <option value="Cabrio" selected>Cabrio</option>
            <option value="Combi">Combi</option>
            <option value="Compacta">Compacta</option>
            <option value="Coupe">Coupe</option>
            <option value="Sedan">Sedan</option>
            <option value="SUV">SUV</option>
        </select>
    </div>
    <div class="form-group">
        <label for="inp-marca">Marca</label>
        <input class="form-control" type="text" name="marca" id="inp-marca">
    </div>
    <div class="form-group">
        <label for="inp-model">Model</label>
        <input class="form-control" type="text" name="model" id="inp-model">
    </div>
    <div class="form-group">
        <label for="inp-generatie">Generatie</label>
        <input class="form-control" type="text" name="generatie" id="inp-generatie">
    </div>
    <div class="form-group">
        <label for="inp-an">An</label>
        <input class="form-control" type="number" name="an" id="inp-an" min="1900" max="2023" value="2000">
    </div>
    <div class="form-group">
        <label for="inp-km">KM</label>
        <input class="form-control" type="number" name="km" id="inp-km" min="0" max="3000000" value="200000">
    </div>
    <div class="form-group">
        <label for="sel-combustibil">Combustibil:</label>
        <select class="form-select" name="combustibil" id="sel-combustibil">
            <option value="Benzina" selected>Benzina</option>
            <option value="Diesel">Diesel</option>
            <option value="Electric">Electric</option>
            <option value="Hibrid">Hibrid</option>
        </select>
    </div>
    <div class="form-group">
        <label for="inp-capacitate">Capacitate cilindrica</label>
        <input class="form-control" type="number" name="capacitate" id="inp-capacitate" min="500" max="7000" value="1998">
    </div>
    <div class="form-group">
        <label for="inp-cp">Cai Putere</label>
        <input class="form-control" type="number" name="cp" id="inp-cp" min="30" max="1000" value="100">
    </div>
    <div class="form-group">
        <label for="sel-transmisie">Transmisie:</label>
        <select class="form-select" name="transmisie" id="sel-transmisie">
            <option value="Manuala" selected>Manuala</option>
            <option value="Automata">Automata</option>
        </select>
    </div>
    <div class="form-group">
        <label for="inp-dotari">Dotari (separati dotarile cu virgula)</label>
        <textarea class="form-control" name="dotari" id="inp-dotari"></textarea>
    </div>
    <div class="form-group">
        <label for="inp-descriere">Descriere</label>
        <textarea class="form-control" name="descriere" id="inp-descriere"></textarea>
    </div>
    <div class="form-group">
        <label for="inp-pret">Pret</label>
        <input class="form-control" type="number" name="pret" id="inp-pret" min="1" value="2000">
    </div>
    <div class="form-group">
        <input class="form-check-input" type="checkbox" name="negociabil" id="inp-negociabil">
        <label for="inp-negociabil">Pret negociabil</label>
    </div>
    <div class="form-group">
        <label for="inp-locatie">Locatie</label>
        <input class="form-control" type="text" name="locatie" id="inp-locatie">
    </div>
    <input class="btn btn-outline-primary" type="submit" value="Trimite">
    <input class="btn btn-outline-primary" type="reset" value="Reseteaza">
</form>